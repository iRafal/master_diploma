<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.medvid.andrii.diplomawork">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".DiplomaApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".landing.LandingActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".login.LoginActivity"
            android:label="@string/login_camel_style"
            android:parentActivityName=".login.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity
            android:name=".registration.RegistrationActivity"
            android:label="@string/registration_camel_style"
            android:parentActivityName=".landing.LandingActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".HomeActivity"
            android:label=""
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".tasks.item.TaskItemActivity"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".forecasts.item.ForecastItemActivity"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".profile.data.EditProfileDataActivity"
            android:label="@string/edit_profile_data"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".profile.account.EditAccountDataActivity"
            android:label="@string/edit_account_data"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <provider
            android:name=".data.DiplomaContentProvider"
            android:authorities="${packageName}"
            android:exported="false"/>

    </application>

</manifest>